[core]
	editor = nvim
[alias]
	co = checkout
	b = branch
	br = branch
	s = status
	st = status
	d = diff
	dw = diff --word-diff=color --word-diff-regex=.  # display diffs like online tools (like GitHub or GitLab)
	pushf = push --force-with-lease  # push force
	vlog = log --oneline --decorate --all --graph  # visual log
[push]
	default = simple
[merge]
	tool = nvimdiff
[mergetool "nvimdiff"]
	cmd = nvim -d "$BASE" "$LOCAL" "$REMOTE" "$MERGED" -u NONE -c '$wincmd w' -c 'wincmd J'

[include]
	path = .config/gitconfig_user
